<% provide(:title, "ログインページ") %>

<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :email, "メールアドレス", class: "label-login" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, "パスワード", class: "label-login" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit "ログイン", class: "col-md-12 btn btn-primary btn-login" %>
  
    <% end %>
    <p>アカウント作成は<%= link_to "こちら", signup_path %>から</p>
  </div>
</div>